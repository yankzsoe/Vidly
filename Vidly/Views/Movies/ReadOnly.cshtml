@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table id="movie" class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Genre.Name)</th>
        </tr>
    </thead>

    <tbody>
    </tbody>

</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#movie').DataTable({
                ajax: {
                    url: '/api/movies',
                    dataSrc: ""
                },
                columns: [
                    {
                        data: 'name',
                        render: function (data,type,movie) {
                            return "<a href='/movies/details/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data:'genre.name'
                    }
                ]
            });
        });
    </script>
}