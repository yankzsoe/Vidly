@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="customer" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipType.Name)
            </th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</td>
                <td>@item.MembershipType.Name</td>
                <td>
                    <button data-customer-id="@item.Id" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#customer').DataTable();

            $('#customer').on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '/api/customers/' + button.attr("data-customer-id"),
                            method: 'DELETE',
                            success: function () {
                                button.parents("tr").remove();
                            },
                            error: function () {
                                alert("Error..");
                            }
                        });
                    }
                });
            });
        });
    </script>
}